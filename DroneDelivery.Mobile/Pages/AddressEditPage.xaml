<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DroneDelivery.Mobile.Pages.AddressEditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Entry Placeholder="City" Text="{Binding City}" />
        <Entry Placeholder="Street" Text="{Binding Street}" />
        <Entry Placeholder="Zip" Text="{Binding Zip}" />
        <Editor Placeholder="Notes" AutoSize="TextChanges" Text="{Binding Notes}" />

        <Button Text="Save" Command="{Binding SaveCommand}" />
        <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />
        <Label Text="{Binding Error}" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>
