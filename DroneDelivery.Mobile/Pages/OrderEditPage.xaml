<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DroneDelivery.Mobile.Pages.OrderEditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Entry Placeholder="AddressId (numeric)" Text="{Binding AddressId}" Keyboard="Numeric" />
        <Entry Placeholder="TotalWeightKg" Text="{Binding TotalWeightKg}" Keyboard="Numeric" />
        <Entry Placeholder="Status (Draft/Scheduled/...)" Text="{Binding Status}" />

        <Button Text="Save" Command="{Binding SaveCommand}" />
        <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />
        <Label Text="{Binding Error}" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>
