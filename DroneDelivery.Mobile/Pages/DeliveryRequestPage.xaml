<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DroneDelivery.Mobile.Pages.DeliveryRequestPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="Schedule your delivery" FontSize="22" />

            <Label Text="Email" />
            <Entry Placeholder="you@example.com" Text="{Binding Email}" Keyboard="Email" />

            <Label Text="Delivery date" />
            <DatePicker Date="{Binding DeliveryDate}" MinimumDate="{x:Static system:DateTime.Today}" />

            <Label Text="Address details" FontAttributes="Bold" />
            <Entry Placeholder="Label (optional)" Text="{Binding Label}" />
            <Entry Placeholder="Street" Text="{Binding Street}" />
            <Entry Placeholder="City" Text="{Binding City}" />
            <Entry Placeholder="Country" Text="{Binding Country}" />
            <Entry Placeholder="ZIP (optional)" Text="{Binding Zip}" />
            <Editor Placeholder="Notes (optional)" Text="{Binding Notes}" AutoSize="TextChanges" />

            <Label Text="Package weight (kg)" />
            <Entry Placeholder="1.0" Text="{Binding TotalWeightKg}" Keyboard="Numeric" />

            <Button Text="Submit delivery request" Command="{Binding SubmitCommand}" />
            <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />
            <Label Text="{Binding Error}" TextColor="Red" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
