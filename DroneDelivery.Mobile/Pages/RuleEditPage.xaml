<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DroneDelivery.Mobile.Pages.RuleEditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Allowed values: 1, 3, 5, 7" />
        <Entry Placeholder="DaysBefore" Text="{Binding DaysBefore}" Keyboard="Numeric" />
        <HorizontalStackLayout>
            <Label Text="Enabled" VerticalOptions="Center" />
            <Switch IsToggled="{Binding Enabled}" />
        </HorizontalStackLayout>

        <Button Text="Save" Command="{Binding SaveCommand}" />
        <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />
        <Label Text="{Binding Error}" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>
